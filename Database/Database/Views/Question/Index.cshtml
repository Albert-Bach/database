@model Database.ViewModels.QuestionViewModel

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>KáptaLAN Q&A</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-default navbar-inverse bg-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Database</a>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="/create">Add question</a></li>
                <li><a href="/user">Add user</a></li>
            </ul>
        </div>
    </nav>
    <center>
        <h2>KáptaLAN Q&A</h2>
    </center><br>
    <div class="table-responsive">
    <table class="table table-striped table-bordered table-dark">
        <thead class="thead-dark">
        <th scope="col">Question</th>
        <th scope="col">Version Number</th>
        <th scope="col">Answer</th>
        <th scope="col">Date</th>
        <th scope="col">User</th>
        <td scope="col">Delete</td>
        <td scope="col">Edit</td>
        </thead>
        @foreach (var item in Model.Questions)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.VersionNumber</td>
                <td>@item.Answer</td>
                <td>@item.Date</td>
                <td>@(Model.Users.FirstOrDefault(x => x == item.User).Name)</td>
                <td>
                    <form action="/delete/@item.QuestionId" method="get">
                        <button type="submit" class="btn btn-danger">
                            <span aria-hidden="true">Delete</span>
                        </button>
                    </form>
                </td>
                <td>
                    <form action="/edit/@item.QuestionId" method="get">
                        <button type="submit" class="btn btn-warning">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true" background-color="#0C5840"></span>
                        </button>
                    </form>
                </td>
            </tr>
        }
    </table>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>